# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Webjars, requirejs, routes and other assets
GET         /routes.js                  controllers.MainController.router
GET         /lib/require.js             controllers.WebJarAssets.requirejs
GET         /webjars/*file              controllers.WebJarAssets.at(file)
GET         /assets/*file               controllers.Assets.at(path="/public", file)

GET         /                           controllers.MainController.index(path = "")
GET         /events                     controllers.MainController.events
GET         /events/:ein/tasks          controllers.MainController.eventsForEmployee(ein: String)

GET         /types                      controllers.TypeController.getAll(page: Int ?= 0, perPage: Int ?= 10)
POST        /types                      controllers.TypeController.add
GET         /types/add                  controllers.TypeController.index
GET         /types/:code                controllers.TypeController.get(code: String)
POST        /types/:code                controllers.TypeController.update(code: String)


# Every other page
GET         /*path                      controllers.MainController.index(path)
